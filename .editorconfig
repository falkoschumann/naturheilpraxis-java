# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.{md, py}]
indent_size = 4

[*.java]
max_line_length = 100

[*.bat]
end_of_line = crlf
charset = latin1

[*.xml]
max_line_length = 250

[Makefile]
indent_style = tab
indent_size = 4
